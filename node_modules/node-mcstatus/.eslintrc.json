{
	"env": {
		"browser": true,
		"es2021": true,
		"node": true
	},
	"extends": [
		"eslint:recommended",
		"plugin:@typescript-eslint/recommended"
	],
	"parser": "@typescript-eslint/parser",
	"parserOptions": {
		"ecmaVersion": "latest",
		"sourceType": "module"
	},
	"plugins": [
		"@typescript-eslint"
	],
	"rules": {
		"indent": [
			"error",
			"tab"
		],
		"linebreak-style": [
			"error",
			"unix"
		],
		"quotes": [
			"error",
			"single"
		],
		"semi": [
			"error",
			"always"
		]
	},
	"overrides": [
		{
			"files": "test/**/*.test.js",
			"env": {
				"commonjs": true,
				"node": true
			},
			"globals": {
				"test": true,
				"expect": true
			},
			"rules": {
				"@typescript-eslint/no-var-requires": "off"
			}
		}
	],
	"ignorePatterns": [
		"dist/**/*"
	]
}